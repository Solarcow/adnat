<h1> Shifts </h1>

<table>
	<tbody>
	    <% @shift.each do |shift| %>
	      <tr>
	        <td><%= shift.user_id %></td>
	        <td><%= shift.start %></td>
	        <td><%= shift.finish %></td>
	        <td><%= shift.break_length %></td>
	        <td><%= link_to 'Show', '#' %></td>
	        <td><%= link_to 'Edit', '#' %></td>
	        <td><%= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
</table>